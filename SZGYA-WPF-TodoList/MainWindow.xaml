<Window x:Class="SZGYA_WPF_TodoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SZGYA_WPF_TodoList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="2,0"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="10,10">
        <ListBox MinHeight="50px" x:Name="lstbxTodoLists"></ListBox>
        <StackPanel Orientation="Horizontal" Margin="0,10">
            <Button Content="Új lista" Click="btnNewTodo"/>
            <Button Content="Kilépés" Click="btnExit"/>
        </StackPanel>
    </StackPanel>
</Window>
